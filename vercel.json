{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "website/package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "cd .. && npx pnpm install --no-frozen-lockfile"
      }
    }
  ],
  "routes": [
    {
      "src": "/website/_next/(.*)",
      "dest": "/website/_next/$1"
    },
    {
      "src": "/website/(.*)",
      "dest": "/website/$1"
    },
    {
      "src": "/((?!website).*)",
      "dest": "/website/$1"
    }
  ]
}
