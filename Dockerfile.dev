# LUKA Development Dockerfile
FROM node:20-alpine

# Install dependencies for native modules
RUN apk add --no-cache libc6-compat python3 make g++

# Set working directory
WORKDIR /app

# Copy package files
COPY templates/nextjs-supabase/package*.json ./

# Install dependencies
RUN npm install

# Copy application code
COPY templates/nextjs-supabase/ ./

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]
