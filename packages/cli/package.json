{
  "name": "@ranavibe/cli",
  "version": "1.0.0",
  "description": "RANA CLI - Guardrails, VibeSpecs, and feature workflows for AI-assisted development",
  "bin": {
    "rana": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
