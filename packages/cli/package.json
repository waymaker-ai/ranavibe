    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "yaml": "^2.3.4",
    "glob": "^10.3.10",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "rana",
    "cli",
    "guardrails",
    "vibespec",
    "ai-development",
    "agents",
    "code-generation",
    "natural-language"
